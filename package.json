{
  "name": "transporte-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo para plataforma de transporte",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "db:migrate": "pnpm --filter @transporte-platform/database migrate",
    "db:seed": "pnpm --filter @transporte-platform/database seed",
    "db:studio": "pnpm --filter @transporte-platform/database studio",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

